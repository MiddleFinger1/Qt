<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="mytestprogram.AddNoteForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
            android:layout_alignParentTop="true"
            android:id="@+id/addNote.scroll"
            android:layout_above="@id/addNote.ButtonOk"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">
            <EditText
                    android:inputType="textMultiLine"
                    android:id="@+id/addNote.TextAction"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:gravity="start|top"
                    android:ems="10"
                    android:text=""
                    android:textSize="18sp"
                    android:hint="@string/action"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="textMultiLine"
                    android:gravity="start|top"
                    android:ems="10"
                    android:textSize="18sp"
                    android:id="@+id/addNote.TextDescription"
                    android:hint="@string/description"/>
            <TextView
                    android:text="@string/other_params"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/addNote.SwitcherParams"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:padding="10dp"/>
            <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/other_setting"
                    android:visibility="visible"/>
        </LinearLayout>
    </ScrollView>
    <Button
            android:text="@string/ok"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/addNote.ButtonOk"
            android:textAllCaps="false"
            android:layout_margin="5dp"/>
    <Button
            android:text="@string/cancel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:id="@+id/addNote.ButtonCancel"
            android:textAllCaps="false"
            android:layout_margin="5dp"/>
</RelativeLayout>