<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_item"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="20dp"
        card_view:cardBackgroundColor="#1B90D6"
        card_view:contentPadding="10dp"
        android:layout_margin="10dp">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_marginEnd="10dp"
                android:background="@drawable/flag_green_active"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/cardView.privacyState"
                android:contentDescription="@string/action"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_above="@id/cardItem.textDescription"/>
        <TextView
                android:text="@string/action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cardItem.textAction"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@id/cardItem.hideContent"
                android:layout_alignParentEnd="false"
                android:layout_toEndOf="@id/cardView.privacyState"
                android:textAlignment="center"
                android:textSize="24sp"
                android:singleLine="true"/>
        <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/cardItem.hideContent"
                android:layout_alignParentEnd="true"
                android:layout_above="@id/cardItem.textDescription"/>
        <TextView
                android:text="@string/description"
                android:layout_width="match_parent"
                android:id="@+id/cardItem.textDescription"
                android:layout_below="@id/cardItem.textAction"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="start|center_vertical"
                android:maxLines="3"/>
        <TextView
                android:layout_below="@id/cardItem.textDescription"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardView.dateCreate"
                android:gravity="center_vertical|end"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>